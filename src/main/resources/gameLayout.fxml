<?import javafx.scene.layout.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import com.comp2042.view.GameOverPanel?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.comp2042.view.GuiController">

    <!-- Dim full-window background grid -->
    <GridPane fx:id="brickPanel" hgap="1" vgap="1" />

    <HBox alignment="CENTER" spacing="40">
        <!-- LEFT: HOLD panel -->
        <VBox StackPane.alignment="TOP_LEFT"
              spacing="5"
              translateX="20"
              translateY="20">
            <Label text="HOLD" styleClass="holdBrickLabel"/>
            <Pane fx:id="holdPane"
                  prefWidth="80" prefHeight="80"
                  maxWidth="80" maxHeight="80"
                  styleClass="nextBrick"/>
        </VBox>


        <!-- CENTER: game board -->
        <StackPane alignment="CENTER"
                   maxWidth="150" maxHeight="400"
                   prefWidth="150" prefHeight="400"
                   styleClass="gameBoard">
            <GridPane fx:id="gamePanel" hgap="0" vgap="1" />
            <Pane fx:id="brickOverlay" pickOnBounds="false" />
        </StackPane>

        <!-- RIGHT: score panel -->
        <VBox alignment="TOP_CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="5">
                <Label text="NEXT" styleClass="nextBrickLabel"/>
                <Pane fx:id="nextBrickPane"
                      prefWidth="80" prefHeight="80"
                      maxWidth="80" maxHeight="80"
                      styleClass="nextBrick"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5">
                <Label text="LEVEL" styleClass="nextBrickLabel"/>
                <StackPane styleClass="ipad-dark-grey">
                    <Label fx:id="levelLabel" text="1" styleClass="scoreClass" />
                </StackPane>
            </VBox>

            <VBox alignment="CENTER" spacing="5">
                <Label text="SCORE" styleClass="nextBrickLabel"/>
                <StackPane styleClass="ipad-dark-grey">
                    <Label fx:id="scoreLabel"
                           text="Score: 0"
                           styleClass="scoreClass" />
                </StackPane>
            </VBox>

            <VBox alignment="CENTER" spacing="5">
                <Label text="BEST" styleClass="nextBrickLabel"/>
                <StackPane styleClass="ipad-dark-grey">
                    <Label fx:id="highScoreLabel" text="0" styleClass="scoreClass" />
                </StackPane>
            </VBox>
        </VBox>
    </HBox>

    <!-- Notifications & game over banner (overlay on top) -->
    <Group fx:id="groupNotification">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel" />
        </VBox>
    </Group>

    <VBox fx:id="pauseMenu" alignment="CENTER" spacing="20" visible="false"
          style="-fx-background-color: rgba(0, 0, 0, 0.75);">
        <Label text="PAUSED"
               styleClass="pauseTitle"/>

        <Button text="RESUME" onAction="#onResume"
                styleClass="ipad-dark-grey" prefWidth="200"/>

        <Button text="MAIN MENU" onAction="#onExitToMenu"
                styleClass="ipad-dark-grey" prefWidth="200"/>
    </VBox>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</StackPane>